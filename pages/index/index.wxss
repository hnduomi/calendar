/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}

.calendar{
    position: absolute;
    bottom: 0;
    width: 100%;
    z-index: 999;
    background-color: #fff; 
}
.tab{
    display:inline-block;
    width:50%;
    text-align:center;
    font-size:16px;
    color: #ccc;
}
.tab-bar{
    background-color: #eee;
    height: 40px;
    line-height: 40px;
}
.tab-bar .active{
    color: #000;
}
.selected-item{
    font-size: 28px;
}

.event-type_parent{
    font-size: 14px;
}
.event-type_child{
    text-align: center;
    line-height: 30px;
}

.event-type_icon {
    width:24px;
    height:24px;
    margin-top: 3px;
}
.event-type_txt{
    display: inline-block;
}